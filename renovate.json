{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "labels": ["renovate"],
  "baseBranches": ["main"],
  "automerge": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "matchPackagePatterns": ["react"],
      "addLabels": ["react"]
    },
    {
      "matchPackagePatterns": ["storybook"],
      "addLabels": ["storybook"]
    },
    {
      "matchPackagePatterns": ["@chakra-ui", "@emotion", "framer-motion"],
      "addLabels": ["ChakraUI"]
    }
  ]
}
